rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns this document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to get user's role from their profile
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    // User profiles
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if false; // Only Cloud Functions
      allow update: if isOwner(userId)
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid', 'createdAt', 'isActive']);
      allow delete: if false;
    }

    // Reports - admin read only, Cloud Functions write
    match /reports/{reportId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions
    }

    // Metrics - admin read only, Cloud Functions write
    match /metrics/{metricId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
