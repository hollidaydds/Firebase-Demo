rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    // ============================================
    // USER PROFILES
    // ============================================

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if false; // Only Cloud Functions
      allow update: if isOwner(userId)
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid', 'createdAt', 'isActive']);
      allow delete: if false;
    }

    // ============================================
    // STUDENTS (FERPA-Protected)
    // ============================================

    match /students/{studentId} {
      // Only creator or admin can read
      allow read: if isAuthenticated()
        && (resource.data.createdBy == request.auth.uid || isAdmin());

      // All writes go through Cloud Functions for audit logging
      allow create, update, delete: if false;
    }

    // ============================================
    // ASSESSMENTS
    // ============================================

    match /assessments/{assessmentId} {
      // Read: must own the related student
      allow read: if isAuthenticated()
        && get(/databases/$(database)/documents/students/$(resource.data.studentId)).data.createdBy == request.auth.uid;

      // All writes through Cloud Functions
      allow create, update, delete: if false;
    }

    // ============================================
    // EVALUATION REPORTS
    // ============================================

    match /evaluationReports/{reportId} {
      // Read: must own the related student
      allow read: if isAuthenticated()
        && get(/databases/$(database)/documents/students/$(resource.data.studentId)).data.createdBy == request.auth.uid;

      // All writes through Cloud Functions
      allow create, update, delete: if false;
    }

    // ============================================
    // SYSTEM COLLECTIONS (Admin Only)
    // ============================================

    match /reports/{reportId} {
      allow read: if isAdmin();
      allow write: if false;
    }

    match /metrics/{metricId} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // ============================================
    // DEFAULT DENY
    // ============================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
