rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ============================================
    // USER PROFILES
    // ============================================

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if false; // Only Cloud Functions
      allow update: if isOwner(userId)
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['uid', 'createdAt', 'isActive', 'formsCreated']);
      allow delete: if false;
    }

    // ============================================
    // FEEDBACK FORMS
    // ============================================

    match /feedbackForms/{formId} {
      // Owner can read their own forms
      allow read: if isAuthenticated() && resource.data.createdBy == request.auth.uid;

      // All writes go through Cloud Functions for validation
      allow create, update, delete: if false;
    }

    // ============================================
    // FEEDBACK RESPONSES
    // ============================================

    match /feedbackResponses/{responseId} {
      // Owner of the form can read responses
      allow read: if isAuthenticated()
        && get(/databases/$(database)/documents/feedbackForms/$(resource.data.formId)).data.createdBy == request.auth.uid;

      // All writes go through Cloud Functions (including anonymous submissions)
      allow create, update, delete: if false;
    }

    // ============================================
    // SYSTEM COLLECTIONS (Cloud Functions Only)
    // ============================================

    match /reports/{reportId} {
      allow read, write: if false;
    }

    match /metrics/{metricId} {
      allow read, write: if false;
    }

    // ============================================
    // DEFAULT DENY
    // ============================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
